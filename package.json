{
  "name": "portfolio-v3",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install && panda codegen",
    "gen": "graphql-codegen --require dotenv/config --config codegen.ts dotenv_config_path=.env.local",
    "dev": "rm -rf .next && pnpm run gen && next dev",
    "build": "pnpm run gen && next build && next-sitemap",
    "analyze": "cross-env ANALYZE=true next build",
    "typecheck": "tsc --noEmit",
    "start": "next start",
    "lint": "next lint",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@giscus/react": "^3.1.0",
    "@graphcms/rich-text-react-renderer": "^0.6.2",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@hygraph/utils": "^1.2.1",
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-aspect-ratio": "^1.1.1",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-visually-hidden": "^1.1.1",
    "@vercel/analytics": "^1.4.1",
    "@vercel/og": "^0.6.5",
    "clsx": "^2.1.1",
    "contentlayer": "^0.3.4",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.0.9",
    "graphql": "^16.10.0",
    "graphql-request": "^7.1.2",
    "graphql-tag": "^2.12.6",
    "next": "^15.1.6",
    "next-contentlayer": "^0.3.4",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-wrap-balancer": "^1.1.1",
    "reading-time": "^1.5.0",
    "rehype-pretty-code": "^0.14.0",
    "sharp": "^0.33.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@graphcms/rich-text-types": "^0.5.1",
    "@graphql-codegen/add": "^5.0.3",
    "@graphql-codegen/cli": "^5.0.4",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-codegen/typescript": "^4.1.3",
    "@graphql-codegen/typescript-graphql-request": "^6.2.0",
    "@graphql-codegen/typescript-operations": "^4.4.1",
    "@next/bundle-analyzer": "^15.1.6",
    "@pandacss/dev": "^0.52.0",
    "@types/body-scroll-lock": "^3.1.2",
    "@types/node": "^22.13.0",
    "@types/react": "19.0.8",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "encoding": "^0.1.13",
    "eslint": "8.44.0",
    "eslint-config-next": "13.4.8",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "postcss": "^8.5.1",
    "postcss-easing-gradients": "^3.0.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^10.1.3",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "start-server-and-test": "^2.0.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": "22.13.1"
  }
}
