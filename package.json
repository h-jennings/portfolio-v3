{
  "name": "portfolio-v3",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install && panda codegen",
    "gen": "graphql-codegen --require dotenv/config --config codegen.ts dotenv_config_path=.env.local",
    "dev": "rm -rf .next && pnpm run gen && next dev",
    "build": "pnpm run gen && next build && next-sitemap",
    "analyze": "cross-env ANALYZE=true next build",
    "typecheck": "tsc --noEmit",
    "start": "next start",
    "lint": "next lint",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@giscus/react": "^2.3.0",
    "@graphcms/rich-text-react-renderer": "^0.6.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@hygraph/utils": "^1.2.1",
    "@radix-ui/colors": "^1.0.0",
    "@radix-ui/react-aspect-ratio": "^1.0.3",
    "@radix-ui/react-scroll-area": "^1.0.4",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-visually-hidden": "^1.0.3",
    "@vercel/analytics": "^1.0.1",
    "@vercel/og": "^0.5.8",
    "clsx": "^1.2.1",
    "contentlayer": "^0.3.4",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.12.18",
    "graphql": "^16.7.1",
    "graphql-request": "^6.1.0",
    "graphql-tag": "^2.12.6",
    "next": "^13.4.8",
    "next-contentlayer": "^0.3.4",
    "next-sitemap": "^4.1.8",
    "next-themes": "^0.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "^4.0.10",
    "react-wrap-balancer": "^1.0.0",
    "reading-time": "^1.5.0",
    "rehype-pretty-code": "^0.10.0",
    "sharp": "^0.32.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@graphcms/rich-text-types": "^0.5.0",
    "@graphql-codegen/add": "^5.0.0",
    "@graphql-codegen/cli": "^3.3.1",
    "@graphql-codegen/schema-ast": "^4.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-graphql-request": "^5.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@next/bundle-analyzer": "^13.4.8",
    "@pandacss/dev": "^0.5.1",
    "@types/body-scroll-lock": "^3.1.0",
    "@types/node": "^20.3.3",
    "@types/react": "18.2.14",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "encoding": "^0.1.13",
    "eslint": "8.44.0",
    "eslint-config-next": "13.4.8",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.24",
    "postcss-easing-gradients": "^3.0.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^9.0.0",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "start-server-and-test": "^2.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
